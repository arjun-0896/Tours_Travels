<p id="notice"><%= notice %></p>

<h1>Bookings</h1>

<table>
  <thead>
    <tr>
      <th>Customer</th>
      <th>Tourname</th>
      <th>Status</th>
      <th>Seatstobook</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @bookings.each do |booking| %>
      <tr>
        <td><%= booking.username %></td>
        <td><%= booking.tourname %></td>
        <td><%= booking.status %></td>
        <td><%= booking.seatsToBook %></td>

        <td><%= button_to 'Show', booking, method: :get %></td>

        <td><%= button_to 'Destroy', booking, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Booking', new_booking_path %>
