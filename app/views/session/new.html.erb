<div>
  <% if flash[:notice] %>
    <p id = "notice"> <%= flash[:notice] %></p>
  <%end %>
</div>

<h1>Session#new</h1>
<div>

  <%=form_tag do %>
    <fieldset>
      <legend>Please log in</legend>
      <div>
        <%= label_tag :username, 'Name' %>
        <%= text_field_tag :username, params[:username] %>
        <%= label_tag :password, 'Password' %>
        <%= text_field_tag :password, params[:password] %>

      </div>
      <div>
        <%= submit_tag "Login" %>
      </div>
      <br>
      <div>
        <td><%= link_to 'signup', new_user_path %></td>
      </div>
    </fieldset>
    <% end %>
</div>

