<p id="notice"><%= notice %></p>

<h1>Tours</h1>
<p><%= link_to 'Search', searches_url %></p>
<table>
  <thead>
    <tr>
      <th>Tour name</th>
      <th>Description</th>
      <th>Price</th>
      <th>Deadline</th>
      <th>Start date</th>
      <th>End date</th>
      <th>Total seats</th>
      <th>Available seats</th>
      <th>Contact info</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tours.each do |tour| %>
      <tr>
        <td><%= tour.tourname %></td>
        <td><%= tour.description %></td>
        <td><%= tour.price %></td>
        <td><%= tour.deadline %></td>
        <td><%= tour.startDate %></td>
        <td><%= tour.endDate %></td>
        <td><%= tour.totalSeats %></td>
        <td><%= tour.availableSeats %></td>
        <td><%= tour.contactInfo %></td>
        <td><%= button_to 'Show', tour, method: :get%></td>
        <td><%= button_to 'Edit', edit_tour_path(tour), method: :get %></td>
        <td><%= button_to 'Destroy', tour, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Tour', new_tour_path %>
